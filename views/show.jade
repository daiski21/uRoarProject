extends layout

block content
    
    //NAV SECTION
    .navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          a.navbar-brand(href='#') uRoar!!
        .navbar-collapse.collapse
          ul.nav.navbar-nav.navbar-right
            li
              a(href='/') HOME
            li
              a(href='../#price-section') ADD NEW
            li
              a(href='../me') MY ACCOUNT
            li
              a(href="/auth/logout")  LOGOUT
    // END NAV SECTION
    //CONTENT
    .section1
      .container
        .row.main-low-margin
          .row
            .col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1
              h1#ikaw #{item.name}
              br
          .row
            .col-md-4
            .col-md-6  
              img(src='#{item.image}',  style="width:380px;height:380px;" )
          .row
            .col-md-10.col-md-offset-1.col-sm-10.col-sm-offset-1
                h3 Description: 
                  span #{item.description}
                h3 Category: 
                  span #{item.category}
                h3 Price: 
                  span #{item.price}
                h3 Date Posted: 
                  span #{item.date}
                h3 Date Updated: 
                  span #{item.updated}
                h3 Seller: 
                  span #{item.user}
                h3 Contact Number:
                  span #{item.number}  

    br
    .container
          .row
            input#wawa(type='hidden', value='#{item.name}')
            .col-md-3
            .col-md-6
              form(method="POST", action="/newcomment")
                p Comment
                  input.form-control(type="text", placeholder="Comment", required='', name="comment")
                  input.form-control(type="hidden", placeholder="name", value="#{item.name}" , name="name")
                button.btn.btn-primary(type="submit")
                  i.fa.fa-paper-plane
                  |  Submit
          br        
          .row#comment
            .col-md-3
            .col-md-6
              article#li
            .col-md-3
    script(type='text/javascript').     
      var pangalan = document.getElementById("wawa").value;
        fetch('/api/v1/comment?query={"name":"~('+ pangalan +')"}').then(function(res) {
          res.json().then(function(comment) { 
                console.log('comment', comment);
                var tbody = document.getElementById('li');
                comment.forEach(function(comment) {
                  tbody.insertAdjacentHTML('beforeend', '<span>'
                    + comment.user +  ' : ' + '</span><span>' 
                    + comment.comment + '</span><p>' 
                    + comment.date + '</p>' );

            });
          })
        });           
    //END CONTENT